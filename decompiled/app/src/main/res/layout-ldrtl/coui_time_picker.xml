<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:coui="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal"
    android:id="@+id/pickers"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.coui.appcompat.widget.COUINumberPicker
        android:id="@+id/coui_time_picker_date"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="@dimen/coui_time_picker_date_width"
        android:layout_height="@dimen/coui_time_picker_height"
        coui:couiIsDrawBackground="false"
        coui:couiPickerVisualWidth="@dimen/coui_time_picker_date_width"/>
    <com.coui.appcompat.widget.COUINumberPicker
        android:id="@+id/coui_time_picker_minute"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="@dimen/coui_number_picker_width_small"
        android:layout_height="@dimen/coui_time_picker_height"
        coui:couiIsDrawBackground="false"
        coui:couiPickerVisualWidth="@dimen/coui_number_picker_width_small"/>
    <com.coui.appcompat.widget.COUINumberPicker
        android:id="@+id/coui_time_picker_hour"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="@dimen/coui_number_picker_width_small"
        android:layout_height="@dimen/coui_time_picker_height"
        coui:couiIsDrawBackground="false"
        coui:couiPickerVisualWidth="@dimen/coui_number_picker_width_small"/>
    <com.coui.appcompat.widget.COUINumberPicker
        android:id="@+id/coui_time_picker_ampm"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:visibility="gone"
        android:layout_width="@dimen/coui_number_picker_width_small"
        android:layout_height="@dimen/coui_time_picker_height"
        coui:couiIsDrawBackground="false"
        coui:couiPickerVisualWidth="@dimen/coui_number_picker_width_small"/>
</LinearLayout>
