<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/coui_tool_tips_background"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ScrollView
        android:layout_gravity="center_vertical"
        android:id="@+id/scrollView"
        android:scrollbars="none"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:overScrollMode="never">
        <TextView
            android:textColor="@color/coui_tool_tips_text_color"
            android:id="@+id/contentTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.2"
            android:textAlignment="viewStart"
            android:fallbackLineSpacing="false"/>
    </ScrollView>
    <ImageView
        android:layout_gravity="end|center_vertical"
        android:id="@+id/dismissIv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/coui_tool_tips_delete_icon"
        android:contentDescription="@string/coui_tool_tips_delete_icon_description"
        android:layout_marginEnd="16dp"/>
</FrameLayout>
