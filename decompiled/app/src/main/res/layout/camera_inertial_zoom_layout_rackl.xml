<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:visibility="gone"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/inertial_zoom_view_height_rack">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="@dimen/inertial_zoombar_layout_width_rack"
            android:layout_height="@dimen/inertial_zoom_view_height_rack">
            <com.oplus.camera.p172ui.widget.InertialZoomButton
                android:id="@+id/inertial_zoom_plus_button"
                android:clickable="true"
                android:longClickable="true"
                android:layout_width="@dimen/inertial_zoombar_button_size"
                android:layout_height="@dimen/inertial_zoombar_button_size"
                android:layout_marginTop="@dimen/inertial_zoom_plus_button_margin_top_rack"
                android:src="@drawable/inertial_zoom_plus_button"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"/>
            <com.oplus.camera.p172ui.widget.InertiaZoomBar
                android:id="@+id/inertial_zoom_bar"
                android:clickable="true"
                android:layout_width="@dimen/inertial_zoombar_layout_width_rack"
                android:layout_height="@dimen/inertial_zoombar_layout_height"
                android:layout_centerInParent="true"
                android:rotation="270"/>
            <com.oplus.camera.p172ui.widget.InertialZoomButton
                android:id="@+id/inertial_zoom_minus_button"
                android:clickable="true"
                android:longClickable="true"
                android:layout_width="@dimen/inertial_zoombar_button_size"
                android:layout_height="@dimen/inertial_zoombar_button_size"
                android:layout_marginBottom="@dimen/inertial_zoom_minus_button_margin_bottom_rack"
                android:src="@drawable/inertial_zoom_minus_button"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <com.oplus.camera.p172ui.RotableTextView
            android:textSize="@dimen/inertial_zoom_value_text_size"
            android:id="@+id/inertial_zoom_value_text"
            android:visibility="gone"
            android:layout_width="@dimen/inertial_zoom_text_view_width_vertical"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:lineSpacingExtra="@dimen/inertial_zoom_value_text_line_spacing"
            android:fontFamily="sans-serif-light"/>
    </RelativeLayout>
</LinearLayout>
