<?xml version="1.0" encoding="utf-8"?>
<com.coui.appcompat.preference.ListSelectedItemLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:coui="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/support_preference_detail_preference_padding_left"
    android:paddingEnd="@dimen/support_preference_detail_preference_padding_right">
    <com.coui.appcompat.widget.COUIRoundImageView
        android:layout_gravity="center"
        android:id="@android:id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        coui:couiType="round"/>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="@style/PreferenceContent">
        <TextView
            android:ellipsize="marquee"
            android:id="@android:id/title"
            android:fadingEdge="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="false"
            style="@style/COUIPreferenceTitleStyle"/>
        <TextView
            android:textSize="12sp"
            android:id="@android:id/summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/support_preference_margin_between_line"
            android:layout_below="@android:id/title"
            android:layout_alignStart="@android:id/title"
            style="@style/COUIPreferenceSummaryStyle"/>
    </RelativeLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:id="@android:id/widget_frame"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>
</com.coui.appcompat.preference.ListSelectedItemLayout>
