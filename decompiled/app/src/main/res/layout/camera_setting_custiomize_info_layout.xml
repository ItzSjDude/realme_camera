<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.coui.appcompat.widget.toolbar.COUIToolbar
        android:id="@+id/bottom_sheet_toolbar"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="@dimen/camera_setting_custom_info_content_tool_bar_height"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.coui.appcompat.widget.COUIEditText
                android:id="@+id/bottom_sheet_edit"
                android:layout_marginTop="@dimen/camera_setting_custom_info_content_exit_text_margin_top"
                style="@style/camera_setting_custom_info_content_input_edit_view"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
