<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/long_exposure_parameter_layout"
    android:background="@drawable/professional_mode_guide_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/professional_mode_guide_cancel_button_margin_top"
        android:src="@drawable/professional_mode_guide_cancel_button"
        android:layout_marginStart="@dimen/professional_mode_guide_cancel_button_margin_start"/>
    <com.oplus.camera.p172ui.widget.GuideTextView
        android:textSize="@dimen/professional_mode_guide_title_text_size"
        android:textStyle="bold"
        android:textColor="@color/professional_mode_guide_text_title_color"
        android:layout_gravity="center_horizontal"
        android:id="@+id/tvHeadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/professional_mode_guide_headline_margin_top"
        android:layout_marginBottom="@dimen/professional_mode_guide_headline_margin_bottom"
        android:text="@string/long_exposure_mode_guide_title"
        android:lineHeight="@dimen/professional_mode_guide_headline_height"/>
    <com.oplus.camera.p172ui.widget.MyNestedScrollView
        android:layout_gravity="center_horizontal"
        android:id="@+id/svContent"
        android:paddingBottom="@dimen/long_exposure_guide_content_padding_bottom"
        android:fadingEdge="none"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:maxHeight="@dimen/long_exposure_guide_content_max_height"
        android:overScrollMode="never"
        android:layout_marginStart="@dimen/common_bottom_guide_margin_horizontal"
        android:layout_marginEnd="@dimen/common_bottom_guide_margin_horizontal">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/long_exposure_options_rv"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:nestedScrollingEnabled="false"/>
    </com.oplus.camera.p172ui.widget.MyNestedScrollView>
</androidx.appcompat.widget.LinearLayoutCompat>
