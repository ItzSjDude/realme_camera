<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/guide_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:background="@color/full_page_guide_text_color_black"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.93"/>
    <LinearLayout
        android:gravity="top|center_horizontal"
        android:orientation="vertical"
        android:id="@+id/guide_tips_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_guide_effective_view"
        android:paddingStart="@dimen/common_bottom_guide_margin_horizontal"
        android:paddingEnd="@dimen/common_bottom_guide_margin_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/common_bottom_guide_title_text_size"
            android:textStyle="bold"
            android:textColor="@color/full_page_guide_text_color_white"
            android:id="@+id/guide_tips_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.85"
            android:textDirection="locale"/>
        <com.oplus.camera.p172ui.widget.GuideTextView
            android:textSize="@dimen/common_bottom_guide_description_text_size"
            android:textColor="@color/full_page_guide_text_color_white"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/bottom_guide_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_bottom_guide_description_top_margin"
            android:lineSpacingExtra="@dimen/common_bottom_guide_tips_text_line_spacing"
            android:alpha="0.55"
            android:layout_marginStart="@dimen/common_bottom_guide_margin_horizontal"
            android:layout_marginEnd="@dimen/common_bottom_guide_margin_horizontal"/>
    </LinearLayout>
    <com.oplus.anim.EffectiveAnimationView
        android:id="@+id/bottom_guide_effective_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mode_edit_guide_webview_height"
        android:layout_marginTop="@dimen/common_bottom_guide_arrange_image_margin_top"
        android:layout_centerInParent="true"
        android:forceDarkAllowed="false"
        app:anim_autoPlay="true"
        app:anim_loop="true"/>
    <com.oplus.camera.p172ui.widget.AnimationButton
        android:textSize="@dimen/page_guide_button_ok_size"
        android:textStyle="bold"
        android:textColor="@color/color_white_with_full_percent_transparency"
        android:gravity="center"
        android:id="@+id/guide_button_ok"
        android:layout_width="@dimen/mode_edit_button_width"
        android:layout_height="@dimen/mode_edit_button_height"
        android:layout_marginBottom="@dimen/page_guide_button_ok_margin_bottom"
        android:text="@string/camera_button_ok"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:forceDarkAllowed="false"
        app:animEnable="true"
        app:brightness="0.85"
        app:drawableColor="@color/more_mode_icon_bg_color"
        app:drawableRadius="@dimen/page_guide_button_ok_bg_radius"/>
</RelativeLayout>
