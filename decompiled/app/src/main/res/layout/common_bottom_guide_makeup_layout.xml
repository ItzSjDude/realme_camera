<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/guide_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:background="@color/full_page_guide_text_color_black"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.93"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:gravity="top|center_horizontal"
        android:orientation="horizontal"
        android:id="@+id/guide_tips_container"
        android:paddingTop="@dimen/common_bottom_guide_arrange_padding_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_bottom_guide_video_or_image_margin_top"
        android:layout_above="@+id/makeup_compare"
        android:paddingStart="@dimen/common_bottom_guide_margin_horizontal"
        android:paddingEnd="@dimen/common_bottom_guide_margin_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/tips_icon_im"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/panel_guides_tipsicon"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/setting_pref_title_text_size"
            android:textStyle="bold"
            android:textColor="@color/full_page_guide_text_color_white"
            android:gravity="center"
            android:id="@+id/guide_tips_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/camera_beauty_makeup_watermark_custom_slogan"
            android:alpha="0.85"
            android:textDirection="locale"
            android:layout_marginStart="@dimen/common_bottom_guide_description_top_margin"
            android:layout_marginEnd="2dp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/makeup_compare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:src="@drawable/guide_makeup_cn"
        android:layout_centerInParent="true"/>
    <com.oplus.camera.p172ui.widget.AnimationButton
        android:textSize="@dimen/page_guide_button_ok_size"
        android:textStyle="bold"
        android:textColor="@color/color_white_with_full_percent_transparency"
        android:gravity="center"
        android:id="@+id/guide_button_ok"
        android:layout_width="@dimen/mode_edit_button_width"
        android:layout_height="@dimen/mode_edit_button_height"
        android:layout_marginBottom="@dimen/page_guide_button_ok_margin_bottom"
        android:text="@string/camera_button_ok"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:forceDarkAllowed="false"
        app:animEnable="true"
        app:brightness="0.85"
        app:drawableColor="@color/more_mode_icon_bg_color"
        app:drawableRadius="@dimen/page_guide_button_ok_bg_radius"/>
</RelativeLayout>
