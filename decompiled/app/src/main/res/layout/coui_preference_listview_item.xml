<?xml version="1.0" encoding="utf-8"?>
<com.coui.appcompat.widget.COUICheckedLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <CheckedTextView
        android:gravity="center_vertical"
        android:id="@+id/checkedtextview"
        android:paddingTop="@dimen/support_preference_listview_item_checkTextView_padding_top"
        android:paddingBottom="@dimen/support_preference_listview_item_checkTextView_padding_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checkMark="?android:attr/listChoiceIndicatorSingle"
        android:minHeight="@dimen/support_preference_min_height"
        android:paddingStart="@dimen/support_preference_listview_item_checkTextView_padding_left"
        android:paddingEnd="@dimen/support_preference_listview_item_checkTextView_padding_right"
        android:forceDarkAllowed="false"
        style="?android:attr/textAppearanceLarge"/>
    <ImageView
        android:gravity="bottom"
        android:id="@+id/itemdiver"
        android:background="@drawable/coui_divider_preference_default"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</com.coui.appcompat.widget.COUICheckedLinearLayout>
